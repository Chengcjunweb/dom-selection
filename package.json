{
  "name": "dom-selection",
  "version": "0.3.1",
  "description": "A lightweight, cross-browser library for DOM selections and ranges. IE9+",
  "license": "MIT",
  "repository": "lukeed/dom-selection",
  "author": {
    "name": "Luke Edwards",
    "email": "luke@lukeed.com",
    "url": "lukeed.com"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "uglifyjs dom-selection.js -c > dom-selection.min.js",
    "test": "xo"
  },
  "main": "dom-selection.js",
  "files": [
    "*.js"
  ],
  "keywords": [
    "caret",
    "container",
    "DOM",
    "nodes",
    "range",
    "selection"
  ],
  "dependencies": {},
  "devDependencies": {
    "rollup": "^0.41.5",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "xo": "^0.15.0"
  },
  "xo": {
    "envs": ["browser", "node", "amd"],
    "rules": {
      "no-unused-expressions": 1,
      "wrap-iife": 0,
      "curly": 1
    }
  }
}
